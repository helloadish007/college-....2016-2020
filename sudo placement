rotating an array

t=int(input())
for z in range (t):
    s=int(input())
    l=input().split()
    d=int(input())
    l1=[]
    l2=[]
    if(d<=len(l)):
        for i in range(d):
            l1.append(l[i])
    for j in range(d,len(l)):
        l2.append(l[j])
    l2.extend(l1)
    print(" ".join(l2))
    l1.clear()
    l2.clear()
    
    
  leaders in an array:
  
  
  t=int(input())
for z in range (t):
    s=int(input())
    l=input().split()
    o=[]
    for i in range(len(l)):
        for j in range(i+1,len(l)):
            if(int(l[i])<=int(l[j])):
                break
       
        if(j==len(l)-1):
            o.append(l[i])
    print(" ".join(o))
    o.clear()
    
    reverse array in groups:
    
    
    t=int(input())
for z in range (t):
    s=input().split()
    l=input().split()
    d=int(s[1])
    l1=[]
    l2=[]
    t=[]
    p=[]
    for i in range(0,len(l),d):
        l1.append(l[i:i+d])
    for i in range(len(l1)):
        l2.extend(l1[i][::-1])
    print(" " .join(l2))
    l1.clear()
    l2.clear()
    l.clear()
    
    
   sort in specific order:
   
   
   t=int(input())
for z in range(t):
    s=int(input())
    l=input().split()
    o=[]
    e=[]
    o1=[]
    e1=[]
    for i in range(len(l)):
        if(int(l[i])%2==0):
            e.append(l[i])
        else:
            o.append(l[i])
    o.sort(key=int,reverse=True)
    e.sort(key=int)
    o.extend(e)
    print(" ".join(o))


find the fine:



t=int(input())
for z in range(t):
    s=input().split()
    l=input().split()
    p=input().split()
    o=[]
    e=[]
    tp=0
    for i in range(len(l)):
        if(int(l[i])%2==0):
            e.append(i)
        else:
            o.append(i)
    if(int(s[1])%2==0):
        for i in range(len(o)):
            tp=tp+int(p[int(o[i])])
    else:
          for i in range(len(e)):
            tp=tp+int(p[int(e[i])])
    print(tp)
    o.clear()
    l.clear()
    e.clear()
    tp=0
    
        
            
        
    
        
    
    
    
    
    

        

